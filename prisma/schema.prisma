// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Use an environment variable for the database connection
}

model Clinic {
  id                 Int               @id @default(autoincrement())
  email              String            @unique
  subscriptionStatus SubscriptionStatus @default(TRIAL)
  subscriptionEndsOn DateTime
  createdOn          DateTime          @default(now())
  name               String
  address            String?
  phone              String?
  subscriptionPlanId Int?
  subscriptionPlan   SubscriptionPlan?  @relation(fields: [subscriptionPlanId], references: [id])
  Users              User[]
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String?  @unique
  password  String
  role      Role    @default(RECEPTIONIST)
  clinicId  Int
  Clinic    Clinic  @relation(fields: [clinicId], references: [id])
}

model SubscriptionPlan {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  features     String[] // Array of features as a list of strings
  priceMonthly Float
  priceYearly  Float
  Clinics      Clinic[] // One-to-many relation with Clinic
}

model VerificationOTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String   @unique
  expiresAt DateTime
}

enum Role {
  ADMIN
  DOCTOR
  RECEPTIONIST
}

enum SubscriptionStatus {
  ACTIVE
  TRIAL
  EXPIRED
  CANCELED
}
